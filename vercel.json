{
  "version": 2,
  "builds": [
    {
      "src": "web_interface_vercel_advanced.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/automation.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/scheduler.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/cron.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/optimized_sync.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/optimized_tasks.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/automation_monitor.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/dynamic_scheduler.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/schedule_manager.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/vercel_config_updater.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/automation/(.*)",
      "dest": "api/automation.py"
    },
    {
      "src": "/api/scheduler/(.*)",
      "dest": "api/scheduler.py"
    },
    {
      "src": "/api/cron",
      "dest": "api/cron.py"
    },
    {
      "src": "/api/optimized_sync",
      "dest": "api/optimized_sync.py"
    },
    {
      "src": "/api/optimized_tasks",
      "dest": "api/optimized_tasks.py"
    },
    {
      "src": "/api/monitor/(.*)",
      "dest": "api/automation_monitor.py"
    },
    {
      "src": "/api/schedule/(.*)",
      "dest": "api/schedule_manager.py"
    },
    {
      "src": "/api/vercel/(.*)",
      "dest": "api/vercel_config_updater.py"
    },
    {
      "src": "/(.*)",
      "dest": "web_interface_vercel_advanced.py"
    }
  ],
  "crons": [
    {
      "path": "/api/optimized_sync",
      "schedule": "0 9-18 * * 1-5"
    },
    {
      "path": "/api/optimized_tasks", 
      "schedule": "0 9,11,13,15,17 * * 1-5"
    }
  ],
  "env": {
    "HOST": "0.0.0.0",
    "PORT": "8080",
    "DEBUG": "false"
  }
}
